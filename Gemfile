source 'https://rubygems.org'

# use static version of rails, if you want to use the latest version just
# remove the version info.
# if you update this, say after "gem update", you have to run "bundle update"
gem 'rails', '3.2.13'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

# database adapter
gem 'pg', '0.14.1'
# jquery files
gem 'jquery-rails', '2.2.1'
# the ui themes
gem 'jquery-ui-themes', '0.0.8'
## If you add stuff here -- you will probably need to run a "bundle install"

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', '3.2.6'
  gem 'coffee-rails', '3.2.2'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer'

  gem 'uglifier', '1.2.5'
  
  # Twitter bootstrap
  gem 'anjlab-bootstrap-rails', '2.3.1.1', :require => 'bootstrap-rails'
end

# To use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# Use for Facebook authentication
gem 'facebooker2', '0.0.17'

# cron for ruby
gem 'rufus-scheduler', '2.0.18'

# production webserver
gem 'thin', '1.5.1'
