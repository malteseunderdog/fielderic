<% if session[:logged_in_player].nil? || Player.get_organiser(@match.id).nil? || Player.get_organiser(@match.id).id != session[:logged_in_player].id %>
<script type="text/javascript">
	<!--
	window.location = "/"
	//-->
</script>
<% end %>

<div class="span5">
	<div class="well">
		<table class="table-no-top-border">
			<thead>
				<h3>Edit match</h3>
			</thead>
			<br/>
			<%= form_for(@match) do |f| %>
			<% if @match.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@match.errors.count, "error") %> prohibited this post from being saved:</h2>

				<ul>
					<% @match.errors.full_messages.each do |msg| %>
					<li>
						<%= msg %>
					</li>
					<% end %>
				</ul>
			</div>
			<% end %>

			<tbody>
				<tr>
					<td>
					<b>Date and time</b>
					</td>
					<td>	<%= f.text_field :kickoff, :class => "datetimepicker" %></td>
				</tr>
				<tr>
					<td>
					<b>Place</b>
					</td>
					<td>	<%= f.text_field :location %></td>
				</tr>
				<tr>
					<td>
					<b>Players each side</b>
					</td>
					<td>	<%= f.text_field :variety %></td>
				</tr>
				<tr>
					<td>
					<b>Players required</b>
					</td>
					<td>	<%= f.text_field :required %></td>
				</tr>
				<tr>
					<td>
					<b>Comment</b>
					</td>
					<td>	<%= f.text_field :comment %></td>
				</tr>				
			</tbody>
			<tfoot>
				<tr>
					<td colspan="2">
					<button type="submit" class="btn btn-primary">
						<i class="icon-ok icon-white"></i>
						Save changes
					</button>
					<a class="btn btn-cancel" href="/matches/<%= @match.id %>">
					<i class="icon-remove"></i>
					Cancel
					</a>
					</td>
				</tr>
			</tfoot>
			<% end %>
		</table>
	</div>
</div>
