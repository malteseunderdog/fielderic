<h1>Games you have organised ...</h1>

<table>
   <!--
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
  </tr>
  -->
  
<% for field in @fields %>
  <tr>
    <td><%=h field.player.name %></td>
    <td><%=h field.match.kickoff %></td>
    <td><%=h field.match.location %></td>
    <% %>
    
    <td>
    <% for participating_fields in @players_per_match[field.id] %>
        <%=h participating_fields.player.name %>,
    <% end %>
    </td>
    
  </tr>
<% end %>

</table>
