<div align="center">
<table width="70%" bgcolor="#AACCAA">
  <tr bgcolor="FFFFFF">
  	<td colspan=5><h1>These matches need players. Join in and play some!</h1><br/></td>
  </tr>
  <tr align="left">
    <th>Date</th>
    <th>Place</th>
    <th>Kind</th>
    <th>Players needed</th>
  </tr>
  
<% number_of_matches_to_show = 10 %>  
<% if @match.length < number_of_matches_to_show %>
  <% number_of_matches_to_show = @match.length %>
<% end %>

<% number_of_matches_to_show.times do |i| %>
  <% if i%2==0 %>
  	<tr bgcolor="#EEFFEE">
  <% else %>
  	<tr bgcolor="#CCEECC">  	
  <% end %>
    <td><%=h @match[i].occurs %></td>
    <td><%=h @match[i].location %></td>
    <td><%=h @match[i].kind %>-a-side</td>
    <td><%=h @match[i].required_players %></td>
    <td><%= link_to 'Details', @match[i] %></td>
  </tr>
  <tr>
  	<% if not @match[i].comment.nil? %>
	  <% if i%2==0 %>
	  	<tr bgcolor="#EEFFEE">
	  <% else %>
	  	<tr bgcolor="#CCEECC">
	  <% end %>	  	
	    <td colspan=5>Comments: <%=h @match[i].comment %></td>
	  </tr>
	<% end %>
<% end %>
</table>
</div>
