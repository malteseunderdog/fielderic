<% if params[:signed_in] == true or not session[:player].nil? %>
<div align="center">
<table width="70%" bgcolor="#AACCAA">
	<tr align="left">
		<th width="50%">Plan some</th>
		<th>Play some</th>
	</tr>
	<tr bgcolor="#CCEECC">		
		<td><%= link_to "Create a match", "/matches/new" %></td>
		<td></td>
	</tr>	
</table>
	
</div>
<% end %>
<br/>
<div align="center">
<table width="70%" bgcolor="#AACCAA">
  <tr bgcolor="#FFF">
  	<td colspan=5><h1>These matches need players. Join in and play some!</h1></td>
  </tr>
  <tr align="left">
    <th>Date</th>
    <th>Place</th>
    <th>Kind</th>
    <th>Players needed</th>
  </tr>

  
<% 
  number_of_matches_to_show = 10  
  if @match.length < number_of_matches_to_show
    number_of_matches_to_show = @match.length
  end 
%>

<% number_of_matches_to_show.times do |i| %>
  <% if i%2==0 %>
  	<tr bgcolor="#EEFFEE">
  <% else %>
  	<tr bgcolor="#CCEECC">  	
  <% end %>
    <td><%=h @match[i].kickoff %></td>
    <td><%=h @match[i].location %></td>
    <td><%=h @match[i].variety %>-a-side</td>
    <td><%=h @match[i].required %></td>
    <td>
    	<%= link_to "Details", @match[i] %>    	
		<%= link_to 'Join', join_path(@match), :confirm => 'Are you sure?' %>
    </td>
  </tr>
  <tr>
  	<% if not @match[i].comment.nil? %>
	  <% if i%2==0 %>
	  	<tr bgcolor="#EEFFEE">
	  <% else %>
	  	<tr bgcolor="#CCEECC">
	  <% end %>	  	
	    <td colspan=5>Comments: <%=h @match[i].comment %></td>
	  </tr>
	<% end %>
<% end %>
<% if params[:signed_in] == true or not session[:player].nil? %>
<tr><td colspan=4></td><td><%= link_to "Show all", "/matches" %></td></tr>
<% end %>
</table>
</div>
