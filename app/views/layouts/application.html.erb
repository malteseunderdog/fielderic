<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Field Eric ~ Plan Some | Play Some</title>
		<meta name="description" content="social sports, find player, organise match, field eric cantona">
		<meta name="author" content="Jean-Paul Ebejer, David Camilleri, Michael Camilleri">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<!-- Le styles -->

		<!-- Our own CSS -->
		<%= stylesheet_link_tag "application" %>
		<!-- Some JS here please -->
		<%= javascript_include_tag "application" %>

		<!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		<!-- Le fav and touch icons -->
		<%= favicon_link_tag %>
		<%= favicon_link_tag 'football.png', :rel => 'apple-touch-icon', :type => 'image/png' %>		
	</head>
	<body>
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					</a>
					<a class="brand" href="/">Field Eric</a>
					<div class="nav-collapse">
						<ul class="nav nav-pills">
							<li class="active">
								<a href="#">Home</a>
							</li>
							<li>
								<%= link_to "Matches", matches_path %>
							</li>
							<li>
								<a href="#about">About</a>
							</li>
							<li>
								<a href="#contact">Contact</a>
							</li>
						</ul>
						<ul class="nav pull-right">
							<!-- if logged with facebook in show facebook name and links to account and logout -->
							<% if current_facebook_user != nil %>
							<li>
								<li class="dropdown" id="signin">
								<a class="dropdown-toggle" data-toggle="dropdown" href="#signin">							
								<%= current_facebook_user.username%>
								<b class="caret"></b>
								</a>
								<ul class="dropdown-menu" id="login">
									<li>
										<div>
											<p><a href="#">My account</a></p> <!-- TODO link to players/#id (not fb_user_id)  -->
											<p><a href="#"> My matches</p>
											<p><%= fb_logout_link("Logout", request.url)%></p>												
										</div>
									</li>
								</ul>
							</li>
							
							<!-- if logged in show name and links to account and logout -->
							<% elsif !session[:logged_in_player].nil? %>
							<li>
								<li class="dropdown" id="signin">
								<a class="dropdown-toggle" data-toggle="dropdown" href="#signin">							
								<%= session[:logged_in_player].nickname %>
								<b class="caret"></b>
								</a>
								<ul class="dropdown-menu" id="login">
									<li>
										<div>
											<p><a href="/players/<%= session[:logged_in_player].id %>">My Account</a></p>
											<p><a href="#"> My matches</p>
											<p><a href="/logout">Logout</a></p>																								
										</div>
									</li>
								</ul>
							</li>							
							
							<!-- if not logged in show links to sign in -->
							<% else %>
							<li class="dropdown" id="signin">
								<a class="dropdown-toggle" data-toggle="dropdown" href="#signin">
								Sign in
								<b class="caret"></b>
								</a>
								<ul class="dropdown-menu" id="login">
									<li>
										<div>
											<p>
												<b>Sign in</b> to join or organise matches.
											</p>
										</div>
										<form class="form-inline" name="lm" id="lm" method="post" action="/login" target="_top" accept-charset="utf-8">
											<label>
												Email:
											</label>
											<%
												email = ""
												if session[:needs_password]
													email = session[:email]
												end
											%>
											<input type="text" class="span3" id="lme" name="email" maxlength="75" value="<%= email %>" placeholder="Email address" title="Enter your email address">											
											<% if session[:needs_password] %>
												<label>												
													Password:
												</label>
												<input type="password" class="span2" name="password" maxlength="16" value="" placeholder="Password" title="Enter your password">												
											<% 
												session[:needs_password] = false
												end 
											%>
											<input type="submit" id="sbmt" class="btn btn-primary" value="Play" />
											<input type="hidden" name="frmact" value="login" />											
											<% if flash[:error] %>
											<div id="error">
												<%= flash[:error] %>
											</div>
											<% end %>
										</form>
										<div class="fbconnect">
											<label>
												Or connect with Facebook:
											</label>
											<%=fb_login_and_redirect(request.url, :scope => 'user_location,email')%>										
										</div>
									</li>
									<li>
										<div>
											<p>
												<a href="/login">
												<i class="icon-exclamation-sign"></i> Forgot password?
												</a> &nbsp;
												<a  href="/login#signup">
												<i class="icon-ok"></i> No account? Sign up.
												</a>
											</p>
										</div>
									</li>

								</ul>
							</li>
							<% end %>
						</ul>
					</div><!--/.nav-collapse -->
				</div>
			</div>
		</div>					
		<div class="container">
			<%= yield %>
		</div>

		<footer>
			<div class="container">
				<!--
				<p>&copy; Company 2012</p>
				-->
			</div>
		</footer>
		<%= fb_connect_async_js%>
	</body>
</html>