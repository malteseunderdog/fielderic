<div class="span5">
<div class="well">
<table class="table-no-top-border">
	<thead>
		<h3>Edit profile</h3>
	</thead>
	<br/>
	<%= form_for(@player) do |f| %>
		<tbody>
			<% if !@name_error.nil? %>
			<tr>
				<td colspan="2">
					<div class="alert alert-error">
						<%= @name_error %>
					</div>
				</td>
			</tr>
			<% end %>
			<tr>
				<td>
					<b>Full name</b>
				</td>
				<td><%= f.text_field :name, :value => @player.name %></td>
			</tr>
			
			<% if !@email_error.nil? %>
			<tr>
				<td colspan="2">
					<div class="alert alert-error">
						<%= @email_error %>
					</div>
				</td>
			</tr>
			<% end %>
			<tr>
				<td>
					<b>Email address</b>
				</td>
				<td><%= f.text_field :email, :value => @player.email %></td>
			</tr>
			
			<% if !@mobile_error.nil? %>
			<tr>
				<td colspan="2">
					<div class="alert alert-error">
						<%= @mobile_error %>
					</div>
				</td>
			</tr>
			<% end %>
			<tr>
				<td>
					<b>Mobile number</b>
				</td>
				<td><%= f.text_field :mobile, :value => @player.mobile %></td>
			</tr>
		</tbody>
		<tfoot>
			<tr>
				<td colspan="2">
				<button type="submit" class="btn btn-primary">
					<i class="icon-ok icon-white"></i>
					Save changes
				</button>
				<a class="btn btn-cancel" href="/players">
					<i class="icon-remove"></i>
					Cancel
				</a>
				</td>
			</tr>
		</tfoot>
	<% end %>
</table>
</div>
</div>
