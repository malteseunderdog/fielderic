<div class="span4">
<div class="well">
<table class="table-no-top-border">
	<thead>
		<h3>Edit profile</h3>
	</thead>
	<br/>
	<%= form_for(@player) do |f| %>
	<% if @player.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@player.errors.count, "error") %> prohibited this post from being saved:</h2>

		<ul>
			<% @player.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<tbody>
		<tr>
			<td>
			<b>Full name</b>
			</td>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr>
			<td>
			<b>Email address</b>
			</td>
			<td><%= f.text_field :email %></td>
		</tr>
		<tr>
			<td>
			<b>Phone number</b>
			</td>
			<td><%= f.text_field :mobile %></td>
		</tr>
	</tbody>
	<tfoot>
		<tr>
			<td colspan="2">
			<button type="submit" class="btn btn-primary">
				<i class="icon-ok icon-white"></i>
				Save changes
			</button>
			<a class="btn btn-cancel" href="/players/<%= @player.id %>">
				<i class="icon-remove"></i>
				Cancel
			</a>
			</td>
		</tr>
	</tfoot>
	<% end %>
</table>
</div>
</div>
