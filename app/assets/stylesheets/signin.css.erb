
#loginForm {
	width: 250px;
	padding: 15px;
}

/* Default Input */
#loginForm .textInput {
    width:90%;
    border:1px solid #899caa;
    border-radius:3px;
    -moz-border-radius:3px;
    color:#3a454d;
    font-weight:bold;
    padding:8px 8px;
    box-shadow:inset 0px 1px 3px #bbb;
    -webkit-box-shadow:inset 0px 1px 3px #bbb;
    -moz-box-shadow:inset 0px 1px 3px #bbb;
    font-size:12px;
}

#loginForm label {
    color:#3a454d;
    margin:0px 8px 8px 8px;
    display:block;
    float:left;
}

#extra_form_controls a {
    padding: 0px 0px 15px 8px;
}


#loginForm fieldset {
    margin:0 0 12px 0;
    display:block;
    border:0;
    padding:0;
}

#loginForm p {
	text-align: center;
	margin-bottom: 10px;
	color:#3a454d;
}

#loginForm input.btn-primary {
    color: #fff;
    margin: 0 0 20px 0;
    width: 75px;
}

ul#login li {
    padding: 0;
    margin: 0;
}

ul#login {
    padding: 0;
    margin: 0;
}

.fbconnect {
	margin-top: 10px;
	text-align: center;
}   
